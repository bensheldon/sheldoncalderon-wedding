%html
  %head
    %meta{charset: 'utf-8'}
    %title= current_page.data.title || ''
    %meta{name: 'description', content: ''}
    %meta{name: 'author', content: ''}

    %link{rel:'shortcut icon', type:'image/x-icon', href:'/favicon.ico'}
